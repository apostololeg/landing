.header
    position fixed
    top 0
    height 80px
    width 100%
    transition background-color .1s ease-out
    user-select none
    overflow hidden
    z-index 10

    & > .inner
        max-width 1000px
        margin 0 auto

    & .logo
        height 75px
        width 150px
        min-width 150px
        padding 10px
        margin-left 2px
        box-shadow inset 0 0 0 2px #000
        padding 0

        &:after
            content none

.scrolled .header
    background-color rgba(255,255,255,.9)
    box-shadow 0 1px 1px rgba(34,34,34,.4)
    transition-duration .2s

@media (max-width 500px)
    .header
        & .logo
            height 40px
            width 80px
            min-width 80px

