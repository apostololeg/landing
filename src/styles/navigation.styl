.nav
    &-item_link
    &-item_link:visited
        position relative
        padding 30px 20px
        text-decoration none
        color #000
        -webkit-user-drag none

        &:after
            content ''
            position absolute
            left 0
            top 0
            height 5px
            width 100%
            background-color #333
            transition transform .2s ease-out
            transform translateY(-5px)
            opacity .7

        &.current:after
            opacity 1

        &.current:after
        .mouse &:hover:after
            transition-duration .2s
            transform translateY(0)

    .lang-switcher
        padding 20px
